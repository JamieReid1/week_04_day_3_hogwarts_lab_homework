
<form action="/students/<%= @student.id %>" method="post">

  <label for="first_name"> First Name:</label>
  <input id="first_name" type="text" name="first_name" value="<%= @student.first_name %>">
  <br>
  <label for="last_name"> Last Name:</label>
  <input id="last_name" type="text" name="last_name" value="<%= @student.last_name %>">
  <br>
  <label for="house_select">Select House:</label>
  <select name="house_id" id="house_select">
    <option value="1" <%= "selected" if @student.house == "gryffindor" %> >gryffindor</option>
    <option value="2" <%= "selected" if @student.house == "hufflepuff" %> >hufflepuff</option>
    <option value="3" <%= "selected" if @student.house == "ravenclaw" %> >ravenclaw</option>
    <option value="4" <%= "selected" if @student.house == "slytherin" %> >slytherin</option>
  </select>
  <br>
  <label for="age"> Age:</label>
  <input id="age" type="number" name="age" value="<%= @student.age %>">
  <br>
  <input type="submit" value="Edit Student">

</form>
